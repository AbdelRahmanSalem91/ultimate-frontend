.settings-box.hide-settings
    .toggle-settings
        i.fas.fa-cog.fa-lg
    .settings-content.text-center
        .option-box.color-options
            h4.option-title Color Options
            - var themes = ["blue-theme", "green-theme", "red-theme", "orange-theme", "purple-theme"]
            ul.list-unstyled
                each theme in themes
                    li(data-theme=theme)
        .option-box.font-option
            h4.option-title Font Options
            - var fonts = ["open", "roboto", "poppins", "source"]
            select.form-control
                each font in fonts
                    option(value=font)=font + ' font'
        .option-box
            h4.option-title Sidebar Options